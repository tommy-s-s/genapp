<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4 offset-md-3">
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th >属性</th>
                <th >情報</th>
            </tr>
        </thead>
        <tbody >
            <tr>
                <td ><%= "ユーザ名" %></td>
                <td ><%= @user.name %></td>
            </tr>
            <tr>
                <td ><%= "e-mail" %></td>
                <td ><%= @user.email %></td>
            </tr>
            <tr>
                <td ><%= "社員番号" %></td>
                <td ><%= @user.emp_no %></td>
            </tr>
            <tr>
                <td ><%= "入社日" %></td>
                <td ><%= @user.join_date %></td>
            </tr>

            <% if !@user.join_date.nil? %>
               <tr>
                    <td ><%= "在籍期間" %></td>
                    <td ><%= period(@user.join_date) %></td>
                </tr>
            <% end %>

            <% if !@user.user_bushos.empty? %>
                <tr>
                    <td ><%= "部署名" %></td>
                    <td ><%= Busho.find(@user.user_bushos.last.busho_id).busho_name  %></td>
                </tr>
            <% end %>

            <% if !@user.yakushoku_id.nil? %>
                <tr>
                    <td ><%= "役職" %></td>
                    <td ><%= Yakushoku.find(@user.yakushoku_id).yaku_name  %></td>
                </tr>
            <% end %>

            <% if !@user.committee_id.nil? %>
                <tr>
                    <td ><%= "委員会" %></td>
                    <td ><%= Committee.find(@user.committee_id).com_name  %></td>
                </tr>
            <% end %>

            <tr>
                <td ><%= "生年月日" %></td>
                <td ><%= @user.bh_date %></td>
            </tr>

            <% if !@user.bh_date.nil? %>
               <tr>
                    <td ><%= "年齢" %></td>
                    <td ><%= period(@user.bh_date) %></td>
                </tr>
            <% end %>

        </tbody>
    </table>
  </aside>
</div>