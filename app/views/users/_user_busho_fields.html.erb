<div class="nested-fields">
    <div class="field">
                <%= f.label :busho_id, "部署" %><br>
                <%= f.collection_select :busho_id, 
                                            Busho.all,
                                            :id,:busho_name,
                                            class: 'form-select'  %>
            </div>
            <div class="col-md-2">
                <%= f.label :addbusho_date, "所属開始" %><br>
                <%= f.date_field :addbusho_date, class: 'form-control' %>
            </div>
            <div class="col-md-2">
                <%= f.label :delbusho_date, "所属終了" %><br>
                <%= f.date_field :delbusho_date, class: 'form-control' %>
            </div>
            <%= link_to_remove_association "削除", f,
                                                class: 'btn btn-danger col-md-2 ' %>
    </div>
</div>